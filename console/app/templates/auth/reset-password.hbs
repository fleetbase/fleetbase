<div class="bg-white dark:bg-gray-800 py-8 px-4 shadow rounded-lg">
    <div class="mb-4">
        <LinkTo @route="console" class="flex items-center justify-center">
            <LogoIcon @brand={{@brand}} @size="12" class="rounded-md" />
        </LinkTo>
        <h2 class="text-center text-lg font-extrabold text-gray-900 dark:text-white truncate">
            {{t "auth.reset-password.title"}}
        </h2>
    </div>

    <form class="space-y-6" {{on "submit" (perform this.resetPassword)}}>
        <InputGroup @name={{t "auth.reset-password.form.code.label"}} @value={{this.code}} @inputClass="form-input-lg" @helpText={{t "auth.reset-password.form.code.help-text"}} />
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{{t
                    "auth.reset-password.form.password.label"}}</label>
                <PasswordField @value={{this.password}} @type="password" @required={{true}}
                    @placeholder={{t "auth.reset-password.form.password.label" }} class="form-input-lg" />
                {{#if (t "auth.reset-password.form.password.help-text")}}
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{t "auth.reset-password.form.password.help-text"}}</p>
                {{/if}}
            </div>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{{t
                    "auth.reset-password.form.confirm-password.label"}}</label>
                <PasswordField @value={{this.password_confirmation}} @type="password" @required={{true}}
                    @placeholder={{t "auth.reset-password.form.confirm-password.label" }} class="form-input-lg" />
                {{#if (t "auth.reset-password.form.confirm-password.help-text")}}
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{t "auth.reset-password.form.confirm-password.help-text"}}
                </p>
                {{/if}}
            </div>


        <div class="flex space-x-2">
            <Button @icon="check" @size="lg" @type="primary" @buttonType="submit" @text={{t "auth.reset-password.form.submit-button"}} @onClick={{perform this.resetPassword}} @isLoading={{not this.resetPassword.isIdle}} />
            <Button @size="lg" @buttonType="button" @text={{t "auth.reset-password.form.back-button"}} @onClick={{fn (transition-to "auth.login")}} @disabled={{not this.resetPassword.isIdle}} />
        </div>
    </form>
</div>