<div class="bitacora-mock-report">
    <header class="bitacora-mock-report__header">
        <div>
            <p class="bitacora-mock-report__eyebrow">Administración / Bitácora</p>
            <h1 class="bitacora-mock-report__title">Sección Bitácora – Vista General (demo)</h1>
            <p class="bitacora-mock-report__subtitle">
                Página temporal para validar los componentes de la tarjeta de reportes por sección.
            </p>
        </div>
    </header>

    <section class="bitacora-mock-report__grid">
        <div class="bitacora-mock-report__panel">
            <div class="bitacora-mock-report__panel-heading">
                <p>Usuarios</p>
            </div>
            <div class="bitacora-mock-report__stat-grid">
                {{#each this.model.stats as |stat|}}
                    <button
                        type="button"
                        class="bitacora-mock-report__stat {{if (eq this.selectedPanel stat.key) 'is-active'}}"
                        {{on "click" (fn this.selectPanel stat.key)}}
                    >
                        <span class="bitacora-mock-report__stat-label">{{stat.label}}</span>
                        <span class="bitacora-mock-report__stat-value">{{stat.value}}</span>
                    </button>
                {{/each}}
            </div>
        </div>

        <div class="bitacora-mock-report__panel bitacora-mock-report__panel--roles">
            <div class="bitacora-mock-report__panel-heading">
                <p>Asignación de roles</p>
                <span class="bitacora-mock-report__tag">Demo</span>
            </div>
            <div class="bitacora-mock-report__roles">
                {{#each this.model.roles as |role|}}
                    <div class="bitacora-mock-report__role-item">
                        <span class="bitacora-mock-report__role-label">{{role.label}}</span>
                        <span class="bitacora-mock-report__role-value">{{role.value}}%</span>
                    </div>
                {{/each}}
            </div>
        </div>

        <div class="bitacora-mock-report__panel bitacora-mock-report__panel--activities">
            <div class="bitacora-mock-report__panel-heading">
                <p>Registro de actividades</p>
                <select>
                    <option>Hoy</option>
                    <option>Ayer</option>
                    <option>Últimos 7 días</option>
                    <option>Últimos 14 días</option>
                    <option>Últimos 30 días</option>
                </select>
            </div>
            <ul class="bitacora-mock-report__activity-list">
                {{#each this.model.activities as |activity|}}
                    <li>
                        <p class="bitacora-mock-report__activity-title">
                            <strong>{{activity.user}}</strong> {{activity.action}}
                        </p>
                        <p class="bitacora-mock-report__activity-context">{{activity.context}}</p>
                        <p class="bitacora-mock-report__activity-time">{{activity.time}}</p>
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="bitacora-mock-report__panel bitacora-mock-report__panel--reports">
            <div class="bitacora-mock-report__panel-heading">
                <p>Reportes por sección</p>
                <span class="bitacora-mock-report__tag">{{this.selectedPanelLabel}}</span>
            </div>
            <BitacoraReportCard
                @sections={{this.model.sections}}
                @disableAutoRefresh={{true}}
                @period="last_7_days"
                @chartLimit={{4}}
            />
        </div>
    </section>
</div>

