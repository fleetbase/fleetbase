<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="px-4 text-gray-900 dark:text-gray-50">
        <div class="mb-1 text-base font-semibold">
            {{t "fleet-ops.user-management.you-are-about-to-reset-the-password-for"}}
            {{this.user.name}}
        </div>
        <div class="text-sm mb-4">{{t "fleet-ops.user-management.please-enter-new-password"}} </div>
        <InputGroup>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                <div>
                    <PasswordField @value={{this.password}} @labeltext={{t "auth.reset-password.form.password.label" default="New Password"}} @type="password" @required={{true}} @placeholder="New Password" class="mb-0i" />
                </div>
                <div>
                    <PasswordField @value={{this.confirmPassword}} @labeltext={{t "auth.reset-password.form.confirm-password.label" default="Confirm New Password"}} @type="password" @required={{true}} @placeholder="Confirm New Password" class="mb-0i" />
                </div>
            </div>
        </InputGroup>
        <InputGroup>
            <Checkbox @value={{this.sendCredentials}} @label={{t "fleet-ops.user-management.send-password-credentials"}} @onToggle={{fn (mut this.sendCredentials)}} @alignItems="center" @labelClass="mb-0i" />
        </InputGroup>
    </div>
</Modal::Default>