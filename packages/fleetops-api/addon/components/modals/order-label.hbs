<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        <object id="pdf" class="border-0 w-full shadow-sm h-40rem" data={{@options.data}} type="application/pdf" alt={{@options.order.public_id}}>
            <div class="text-center font-semibold dark:text-gray-100 p-6 flex items-center justify-center">{{t "fleet-ops.component.modals.order-label.loading"}}</div>
        </object>
    </div>
</Modal::Default>