<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}} as |options|>
    <div class="modal-body-container" ...attributes>
        <div class="input-group">
            <label>
                {{t "fleet-ops.component.modals.policy-form.name"}}
            </label>
            <Input @value={{@options.policy.name}} @type="text" class="w-full form-input" placeholder={{t "fleet-ops.component.modals.policy-form.name-text"}} />
        </div>
        <div class="input-group">
            <label>
                {{t "fleet-ops.component.modals.policy-form.description"}}
            </label>
            <Input @value={{@options.policy.description}} @type="text" class="w-full form-input" placeholder={{t "fleet-ops.component.modals.policy-form.description-text"}} />
        </div>
        <div class="input-group">
            <label>
                {{t "fleet-ops.component.modals.policy-form.permissions"}}
            </label>
            <PermissionPicker @selected={{@options.policy.permissions}} @onChange={{fn (mut @options.policy.permissions)}} />
        </div>
    </div>
</Modal::Default>