<div class="relative">
  <Select
    @options={{this.options}}
    @optionLabel={{this.optionLabel}}
    @optionValue={{this.optionValue}}
    @value={{this.value}}
    @onSelect={{this.onChange}}
    @placeholder={{this.placeholder}}
    @allowClear={{true}}
    @onClear={{this.clear}}
    class="w-full form-input form-input-sm pr-8"
    ...attributes
  />
</div>