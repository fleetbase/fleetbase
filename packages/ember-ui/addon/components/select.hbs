<PowerSelect class="status-dropdown"
    @options={{@options}}
    @selected={{this.value}}
    @onChange={{this.select}}
    @disabled={{this.disabled}}
    @placeholder={{this.placeholder}}
    @allowClear={{true}}
    @onClear={{this.clear}}
    as |selectable|
>

    {{!-- {{if (get selectable "label") selectable.label selectable}}  --}}
    {{#if (get selectable "label")}}
        {{selectable.label}}
    {{else}}
        {{t (concat "statuses." (this.formatKey selectable)) default=selectable fallback=selectable}}

    {{/if}}
</PowerSelect>
