<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}} as |options|>
    <div class="modal-body-container">
        <div class="input-group">
            <label>
               {{t "common.format"}}
            </label>
            <Select @value={{@options.format}} @options={{@options.formatOptions}} @placeholder={{t "select_export_format"}} @onChange={{@options.setFormat}} class="w-full" />
        </div>
    </div>
</Modal::Default>