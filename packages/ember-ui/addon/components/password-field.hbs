<div class="relative">
    <Input 
        @value={{@value}} 
        @type={{if this.showPassword "text" "password"}} 
        aria-label={{@label}} 
        name={{@name}} 
        autocomplete={{@autocomplete}} 
        placeholder={{@placeholder}} 
        required={{@required}} 
        disabled={{@disabled}}
        class={{if @class @class "relative block w-full px-3 py-2 text-gray-900 placeholder-gray-500 border border-gray-300 rounded-none appearance-none focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5 dark:text-white dark:bg-gray-700 dark:border-gray-900"}}
        ...attributes
    />
    <button 
        type="button" 
        {{on "click" this.togglePasswordVisibility}} 
        class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 focus:outline-none"
    >
        <FaIcon @icon={{if this.showPassword "eye-slash" "eye"}} style="width: 13px; height: 13px; color: black" />
    </button>
</div>
