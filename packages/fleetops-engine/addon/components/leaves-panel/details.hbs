<div class="p-4">
    <ContentPanel @title={{t "fleet-ops.common.details"}} @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-900">
        <div class="grid grid-cols-2 gap-4 text-xs md:mb-6 dark:text-gray-100">
            <div class="field-info-container space-y-2">
                <div class="field-name">{{t "fleet-ops.common.id"}}</div>
                <div class="field-value">{{n-a @leave.id}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Driver Name</div>
                <div class="field-value">{{n-a @leave.driver.name}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Start Date</div>
                <div class="field-value">{{n-a @leave.startDateFormatted}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">End Date</div>
                <div class="field-value">{{n-a @leave.end_date}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Total Days</div>
                <div class="field-value">{{n-a @leave.total_days}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Leave Type</div>
                <div class="field-value">{{n-a @leave.leave_type}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Reason</div>
                <div class="field-value">{{n-a @leave.reason}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Status</div>
                <div class="field-value">{{n-a @leave.status}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Processed By</div>
                <div class="field-value">{{n-a @leave.processed_by_user.name}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Created At</div>
                <div class="field-value">{{n-a @leave.created_at}}</div>
            </div>
            <div class="field-info-container space-y-2">
                <div class="field-name">Leave Balance</div>
                <div class="field-value">{{n-a @leave.driver.leave_balance}}</div>
            </div>
        </div>
    </ContentPanel>
</div>