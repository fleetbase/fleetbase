{{#let (or @record @leaveRequest @model) as |rec|}}
  <div class="p-4">
    <ContentPanel
      @title={{t "fleet-ops.common.details"}}
      @open={{true}}
      @pad={{true}}
      @panelBodyClass="bg-white dark:bg-gray-900"
    >
      <div class="grid grid-cols-2 gap-4 text-xs md:mb-6 dark:text-gray-100">

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.common.id"}}</div>
          <div class="field-value">{{n-a rec.public_id}}</div>
        </div>

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.common.vehicle"}}</div>
          <div class="field-value">
            {{#if rec.vehicle}}
              {{n-a rec.vehicle.display_name}}
            {{else}}
              {{n-a rec.vehicle_name}}
            {{/if}}
          </div>
        </div>

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.common.reason"}}</div>
          <div class="field-value">{{n-a rec.reason}}</div>
        </div>

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.common.start-date"}}</div>
          <div class="field-value">
            {{n-a (format-date (or rec.scheduledAt rec.start_date))}}
          </div>
        </div>

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.operations.orders.index.estimated-end-date"}}</div>
          <div class="field-value">
            {{n-a (format-date (or rec.estimatedEndDate rec.end_date))}}
          </div>
        </div>

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.common.type"}}</div>
          <div class="field-value">{{n-a rec.unavailability_type}}</div>
        </div>

        <div class="field-info-container space-y-2">
          <div class="field-name">{{t "fleet-ops.common.created-at"}}</div>
          <div class="field-value">
            {{n-a (format-date (or rec.createdAt rec.created_at))}}
          </div>
        </div>

        {{#if rec.notes}}
          <div class="field-info-container space-y-2 col-span-2">
            <div class="field-name">{{t "fleet-ops.common.notes"}}</div>
            <div class="field-value">{{n-a rec.notes}}</div>
          </div>
        {{/if}}

      </div>
    </ContentPanel>
  </div>
{{/let}}
