<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        <div class="grid grid-cols-1 gap-2 text-xs dark:text-gray-100">
            <InputGroup @name={{t "fleet-ops.component.modals.driver-assign-vehicle.vehicle"}} @value={{@options.driver.vehicle_uuid}}>
                <ModelSelect
                    @modelName="vehicle"
                    @selectedModel={{@options.driver.vehicle_uuid}}
                    @placeholder={{t "fleet-ops.component.modals.driver-assign-vehicle.assign-vehicle"}}
                    @triggerClass="form-select form-input"
                    @infiniteScroll={{false}}
                    @renderInPlace={{true}}
                    @onChange={{fn (mut @options.driver.vehicle)}}
                    @onChangeId={{fn (mut @options.driver.vehicle_uuid)}}
                    as |model|
                >
                    {{model.display_name}}
                </ModelSelect>
            </InputGroup>
        </div>
    </div>
</Modal::Default>