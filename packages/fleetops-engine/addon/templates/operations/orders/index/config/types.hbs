{{#if this.noConfigsInstalled}}
    <div class="px-5 my-6">
        <div class="bg-yellow-50 rounded shadow-sm border-l-4 border-yellow-400 p-4">
            <div class="flex items-center">
                <div class="flex-shrink-0 flex items-center">
                    <svg class="h-6 w-6 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path
                            fill-rule="evenodd"
                            d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                            clip-rule="evenodd"
                        ></path>
                    </svg>
                </div>
                <div class="ml-3 flex items-center">
                    <span class="font-extrabold text-xl text-yellow-800">{{t "fleet-ops.operations.orders.index.config.types.no-order-installed"}}</span>
                </div>
            </div>
            <div class="pt-3">
                <p class="text-yellow-700">{{t "fleet-ops.operations.orders.index.config.types.you-have-no-configs"}}</p>
                <div class="flex items-center mt-4">
                    <span class="btn-wrapper inline-flex shadow-sm">
                        <LinkToExternal @tagName="button" class="btn btn-warning" @route="extensions">{{t "fleet-ops.operations.orders.index.config.types.view-extensions"}}</LinkToExternal>
                    </span>
                </div>
            </div>
        </div>
    </div>
